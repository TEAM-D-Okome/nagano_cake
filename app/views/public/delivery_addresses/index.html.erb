<div class="container my-5" >
  <div class="row">
    <div class="col-3 mb-5 offset-1">
      <h3 class="label-background-color"><strong>配送先登録/一覧</strong></h3>
    </div>
  </div>

  <%= form_with model: @new_delivery_address do |f| %>
  <div class="row mb-2 field">
    <div class="col-3 offset-md-1"><%= f.label "郵便番号(ハイフンなし)" %></div>
    <div class="col-3"><%= f.text_field :post_code, class: "form-control" %></div>
  </div>
  <div class="row mb-2 field">
    <div class="col-3 offset-md-1"><%= f.label "住所" %></div>
    <div class="col-7"><%= f.text_field :address, class: "form-control" %></div>
  </div>
  <div class="row mb-5 field">
    <div class="col-3 offset-md-1"><%= f.label "宛名" %></div>
    <div class="col-3"><%= f.text_field :name, class: "form-control" %></div>
    <div class="col-3 offset-md-2"><%= f.submit "新規登録", class:"btn btn-success" %></div>
  </div>
  <% end %>

  <table class="table table-bordered mt-3">
    <thead>
      <tr class="table-secondary text-left">
        <th class="col-3">郵便番号</th>
        <th class="col-6">住所</th>
        <th class="col-3">宛名</th>
        <th class="col-6"></th>
      </tr>
    </thead>
  </table>
</div>