<div class="container my-5" >
  <%= flash[:notice] %>
  <div class="row">
    <div class="col-5 mb-2 offset-1">
      <%= render 'error', obj: @new_delivery_address %>
    </div>
  </div>

  <div class="row">
    <div class="col-3 mb-3 offset-1">
      <h3><strong class="border-bottom border-dark">配送先登録/一覧</strong></h3>
    </div>
  </div>

  <%= form_with model: @new_delivery_address do |f| %>
  <div class="row mb-2 field">
    <div class="col-3 offset-md-1"><%= f.label "郵便番号(ハイフンなし)" %></div>
    <div class="col-3"><%= f.text_field :post_code, class: "form-control" %></div>
  </div>
  <div class="row mb-2 field">
    <div class="col-3 offset-md-1"><%= f.label "住所" %></div>
    <div class="col-7"><%= f.text_field :address, class: "form-control" %></div>
  </div>
  <div class="row mb-5 field">
    <div class="col-3 offset-md-1"><%= f.label "宛名" %></div>
    <div class="col-3"><%= f.text_field :name, class: "form-control" %></div>
    <div class="col-3 offset-md-2"><%= f.submit "新規登録", class:"btn btn-success" %></div>
  </div>
  <% end %>

  <table class="table table-bordered contents-area mt-3">

    <thead class="table-active">
      <tr class="text-left">
        <th class="col-1">郵便番号</th>
        <th class="col-3">住所</th>
        <th class="col-1">宛名</th>
        <th class="col-1"></th>
        <th class="col-1"></th>
      </tr>
    </thead>

    <tbody>
      <% @delivery_addresses.each do |address| %>
        <tr>
          <td class="align-middle"><%= address.post_code %></td>
          <td class="align-middle"><%= address.address %></td>
          <td class="align-middle"><%= address.name %></td>
          <td class="align-middle">
            <%= link_to "編集する", edit_delivery_address_path(address), class: "btn btn-success" %>
          </td>
          <td class="align-middle">
            <%= link_to "削除する", delivery_address_path(address), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>