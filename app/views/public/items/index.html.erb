<div class="container-fluid">
  <div class="row offset-1 mt-4">
    <div class="col-2 mr-3">
      <%= render 'public/homes/genrebar', genres: @genres %>
    </div>
    <div class="contents-area col-8 rounded px-5 pt-3 mb-4">
      <div class="text-center mt-3 mb-5">
        <% if params[:genre_id] %>
          <span class="h3 border-bottom border-dark mt-2 mb-2"><strong><%= @genre.name %>一覧</strong></span><span class="h5"> (全<%= @items_all.count %>件)</span>
        <% else %>
          <span class="h3 border-bottom border-dark mt-2 mb-2"><strong>商品一覧</strong></span><span class="h5"> (全<%= @items_all.count %>件)</span>
        <% end %>
      </div>
      <div class="items-list d-flex flex-wrap">
        <% @items.each do |item| %>
        <div class="item col-md-6 col-lg-3 mt-3 mx-0">
        <%= link_to item_path(item), class: "text-dark" do %>
          <%= image_tag item.get_image(200,150) %><br>
          <p class="m-2"><%= item.name %></p>
          <p class="m-2">¥<%= item.add_tax_tax_out_price.to_s(:delimited) %>(税込)</p>
        <% end %>
        </div>
      <% end %>
    </div>
    <div class="pagination justify-content-center mt-3 mb-3">
    <%= paginate @items, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>
