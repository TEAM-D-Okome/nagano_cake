<div class="container">
  <div class="row mt-5">
    <!--ジャンル検索フォーム用のcol-->
    <div class="col-md-2 mr-3">

    </div>
    <div class="col-md-10">
      <span class="h3 mt-2 mb-2"><strong>商品一覧</strong></span><span class="h5"> (全<%= @items.count %>件)</span>
      <div class="items-list d-flex flex-wrap">
        <% @items.each do |item| %>
        <div class="item col-md-6 col-lg-3 mt-3 mx-0">
        <%= link_to item_path(item), class: "text-dark" do %>
          <%= image_tag item.image, size: '200x150' %><br>
          <p class="m-2"><%= item.name %></p>
          <p class="m-2">¥<%= (item.tax_out_price*1.1).floor.to_s(:delimited) %>(税込)</p>
        <% end %>
        </div>
      <% end %>
      <%= paginate @items %>
    </div>
  </div>
</div>
