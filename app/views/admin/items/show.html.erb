<div class="container my-5">
  <div class="row mt-4 md-2">
    <div class="col-md-10 mx-auto">
      <%= flash[:notice] %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-5">
      <div class="mx-5">
        <%= image_tag @item.get_image(350, 250) %>
      </div>
    </div>
    <div class="col-md-7" style="text-left">
      <h3><span class="border-bottom border-dark">商品詳細</span></h3>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th style="width: 30%">商品名</th>
            <td style="width: 70%"><%= @item.name %></td>
          </tr>
          <tr>
            <th style="width: 30%">商品説明 </th>
            <td style="width: 70%"><%= @item.explanation %></td>
          </tr>
          <tr>
            <th style="width: 30%">ジャンル</th>
            <td style="width: 70%"><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th style="width: 30%"> 税込価格(税抜価格)</th>
            <td style="width: 70%"><%= @item.add_tax_tax_out_price.to_s(:delimited) %>（<%= @item.tax_out_price.to_s(:delimited) %>）円</td>
          </tr>
          <tr>
            <th style="width: 30%">販売ステータス</th>
            <td style="width: 70%">
              <% if @item.is_sale == false %>
                <strong class="text-secondary">販売停止中</strong>
               <% else %>
                <strong class="text-success">販売中</strong>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="my-5 ml-3">
        <%= link_to "編集する", edit_admin_item_path(@item.id),class: "btn btn-lg btn-success" %>
        <%= link_to "商品を追加する", new_admin_item_path, class: "btn btn-lg btn-primary" %>
      </div>
    </div>
  </div>
</div>