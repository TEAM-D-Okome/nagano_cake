<div class="container my-5" >
  <div class="row">
    <div class="col-3 mb-3 offset-1">
      <h3><strong class="border-bottom border-dark">商品一覧</strong></h3>
    </div>
      <div class="col-7 mb-3 text-right">
        <%= link_to new_admin_item_path, class: "text-decoration-none h2" do %>
    　    <i class="fas fa-plus-circle fa-lg" style="color: #d0d1d2;"></i>
    　  <% end %>
      </div>
    <div class="container mb-5">
      <div class="row">
        <div class="col-10 mx-auto">
        <table class="table table-hover text-center contents-area">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <% @items.each do |item| %>
          <tbody>
            <tr>
              <td class="py-4"><%= item.id %></td>
              <td class="py-4">
                <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
                <% end %>
              </td>
              <td class="py-4">¥<%= item.tax_out_price.to_s(:delimited) %></td>
              <td class="py-4"><%= item.genre.name %></td>
              <td class="py-4">
                <% if item.is_sale == false %>
                  <strong class="text-secondary">販売停止中<strong>
                <% else %>
                  <strong class="text-success">販売中</strong>
                <% end %>
              </td>
            </tr>
          </tbody>
          <% end %>
         </table>
         <div class="pagination justify-content-center mt-3">
           <%= paginate @items, theme: 'bootstrap-5' %>
         </div>
        </div>
    　</div>
    </div>
　</div>
</div>