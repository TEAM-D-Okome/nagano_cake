<div class="container my-5">
  <%= render 'error',obj: @genre %>
  <%= flash[:notice] %>
    <div class="row mt-4 md-2">
      <h3 class="table col-4 label-background-color">
        <strong>ジャンル一覧・追加</strong>
      </h3>
    </div>

  <div class="row mt-4 mb-2">
    <%= form_with model: @genre,url:admin_genres_path,method: :post,class:"genre_form" do |f| %>
    <table>
      <tbody>
        <tr>
          <td>ジャンル名</td>
          <td>
            <%= f.text_field:name %>
          </td>
          <td>
            <%= f.submit "新規登録",class:"btn btn-success" %>
          </td>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>

  <div class="row mt-4 mb-2">
    <table class="table col-4">
      <thead>
        <tr class="label-background-color">
          <th>ジャンル</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td colspan="3"></td>
            <td><%= link_to "編集する",edit_admin_genre_path(genre.id),class:'btn btn-success' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>